

#include<iostream>
#include<conio.h>
#include<dos.h> 
#include <windows.h>
#include <time.h>

#define SCREEN_WIDTH 90
#define SCREEN_HEIGHT 26
#define WIN_WIDTH 70 

using namespace std;

HANDLE console = GetStdHandle(STD_OUTPUT_HANDLE);
COORD CursorPosition;

int bulletY[3];
int bulletX[3];
int bulletFlag[3];
int enemyY[3];
int enemyX[3];
int enemyFlag[3];
char ship[4][4] = {
					' ','±','±',' ',
					'±','±','±','±' };

int shipPos = WIN_WIDTH / 2;
int score = 0;

void gotoxy(int x, int y) {
	CursorPosition.X = x;
	CursorPosition.Y = y;
	SetConsoleCursorPosition(console, CursorPosition);
}
void setcursor(bool visible, DWORD size) {
	if (size == 0)
		size = 20;

	CONSOLE_CURSOR_INFO lpCursor;
	lpCursor.bVisible = visible;
	lpCursor.dwSize = size;
	SetConsoleCursorInfo(console, &lpCursor);
}
void drawBorder() {
	for (int i = 0; i < SCREEN_HEIGHT; i++) {
		for (int j = 0; j < 17; j++) {
			gotoxy(0 + j, i); cout << "±";
			gotoxy(WIN_WIDTH - j, i); cout << "±";
		}
	}
	for (int i = 0; i < SCREEN_HEIGHT; i++) {
		gotoxy(SCREEN_WIDTH, i); cout << "±";
	}
}


void genEnemy(int ind) {
	enemyX[ind] = 17 + rand() % (33);
}
void drawEnemy(int ind) {
	if (enemyFlag[ind] == true) {
		gotoxy(enemyX[ind], enemyY[ind]);   cout << "****";
		gotoxy(enemyX[ind], enemyY[ind] + 1); cout << "****";
		gotoxy(enemyX[ind], enemyY[ind] + 2); cout << " ** ";
	}
}
void eraseEnemy(int ind) {
	if (enemyFlag[ind] == true) {
		gotoxy(enemyX[ind], enemyY[ind]); cout << "    ";
		gotoxy(enemyX[ind], enemyY[ind] + 1); cout << "    ";
		gotoxy(enemyX[ind], enemyY[ind] + 2); cout << "    ";
	}
}
void resetEnemy(int ind) {
	eraseEnemy(ind);
	enemyY[ind] = 1;
	genEnemy(ind);
}

void drawShip() {
	for (int i = 0; i < 4; i++) {
		for (int j = 0; j < 4; j++) {
			gotoxy(j + shipPos, i + 22); cout << ship[i][j];
		}
	}
}
void eraseCar() {
	for (int i = 0; i < 4; i++) {
		for (int j = 0; j < 4; j++) {
			gotoxy(j + shipPos, i + 22); cout << " ";
		}
	}
}

void genBullet(int ind) {
	bulletX[ind] = shipPos;
	bulletY[ind] = 22;
}
void drawBullet(int ind) {
	if (bulletFlag[ind] == true) {
		gotoxy(bulletX[ind], bulletY[ind]);   cout << "*";
	}
}
void eraseBullet(int ind) {
	if (bulletFlag[ind] == true) {
		gotoxy(bulletX[ind], bulletY[ind]); cout << " ";
	}
}
void resetBullet(int ind) {
	eraseBullet(ind);
	bulletY[ind] = 20;
	genBullet(ind);
}



int collision() {
	if (enemyY[0] + 4 >= 23) {
		if (enemyX[0] + 4 - shipPos >= 0 && enemyX[0] + 4 - shipPos < 9) {
			return 1;
		}
	}
	return 0;
}
void gameover() {
	system("cls");
	cout << endl;
	cout << "\t\t--------------------------" << endl;
	cout << "\t\t-------- Slabko... -------" << endl;
	cout << "\t\t--------------------------" << endl << endl;
	cout << "\t\tPress any key to go back to menu.";
	_getch();
}



void play() {
	shipPos = -1 + WIN_WIDTH / 2;
	score = 0;
	enemyFlag[0] = 1;
	enemyFlag[1] = 0;
	enemyY[0] = enemyY[1] = 1;
	bulletFlag[0] = 1;
	bulletY[0] = 15;

	system("cls");
	drawBorder();
	genEnemy(0);
	genEnemy(1);
	genBullet(0);


	gotoxy(18, 5); cout << "Press any key to start";
	_getch();
	gotoxy(18, 5); cout << "                      ";

	while (1) {
		if (_kbhit()) {
			char ch = _getch();
			if (ch == 'a' || ch == 'A') {
				if (shipPos > 18)
					shipPos -= 4;
			}
			if (ch == 'd' || ch == 'D') {
				if (shipPos < 50)
					shipPos += 4;
			}
			if (ch == 27) {
				break;
			}
		}

		drawShip();
		drawEnemy(0);
		drawEnemy(1);
		drawBullet(0);

		if (collision() == 1) {
			gameover();
			return;
		}

		Sleep(80);
		eraseCar();
		eraseEnemy(0);
		eraseEnemy(1);
		eraseBullet(0);


		if (enemyY[0] == 10)
			if (enemyFlag[1] == 0)
				enemyFlag[1] = 1;

		if (enemyFlag[0] == 1)
			enemyY[0] += 1;

		if (enemyFlag[1] == 1)
			enemyY[1] += 1;

		if (enemyY[0] > SCREEN_HEIGHT - 4) {
			resetEnemy(0);

		}
		if (enemyY[1] > SCREEN_HEIGHT - 4) {
			resetEnemy(1);

		}

		if (enemyX[0] + enemyY[0] == bulletY[0] + bulletX[0]) {
			resetEnemy(0);
		}

		if (enemyX[1] + enemyY[1] == bulletY[0] + bulletX[0]) {
			resetEnemy(1);
		}


		if (bulletFlag[0] == 1)
			bulletY[0] -= 1;

		if (bulletY[0] == 5) {
			resetBullet(0);
		}
	}
}



int main()
{
	setcursor(0, 0);
	srand((unsigned)time(NULL));

	do {
		system("cls");
		gotoxy(10, 5); cout << " -------------------------- ";
		gotoxy(10, 6); cout << " |        Asteroids       | ";
		gotoxy(10, 7); cout << " --------------------------";
		gotoxy(10, 9); cout << "1. Start Game";
		gotoxy(10, 10); cout << "2. Quit";
		gotoxy(10, 13); cout << "Select option: ";
		char op = _getche();

		if (op == '1') play();
		else if (op == '2') return 0;


	} while (1);

	return 0;
}
